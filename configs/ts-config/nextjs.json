{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    // Type Checking
    "strict": true,

    // Modules
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    // Js Support
    "allowJs": true,

    // Emit
    "noEmit": true,

    //Interop Constraints
    "isolatedModules": true,

    // Language and Environment
    "target": "ES6",
    "jsx": "preserve"
  }
}
