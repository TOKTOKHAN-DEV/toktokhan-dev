{
  "name": "toktokhan-dev",
  "private": true,
  "scripts": {
    "version": "changeset version",
    "release": "changeset publish",
    "ci:publish": "pnpm publish -r",
    "test": "turbo run test --filter='./configs/*' --filter='./packages/*' --filter='./packages/cli-plugins/*' --filter='./packages/react/*' --filter='./packages/zustand/*' --continue",
    "build": "turbo run build --cache-dir=.turbo",
    "build:packages": "turbo run build --filter='./configs/*' --filter='./packages/*' --filter='./packages/cli-plugins/*' --filter='./packages/react/*' --filter='./packages/zustand/*' --cache-dir=.turbo",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "api:documenter": "api-documenter -h",
    "api:doc": "api-documenter generate -i ./apps/docs/api-extractor -o ./apps/docs/docs/api/",
    "api:extractor": "turbo api-extractor ",
    "gen:doc": "tsx apps/docs/scripts/generate-api-docs/index.ts",
    "start:doc": "pnpm --filter @toktokhan-dev/docs start",
    "start:next:page": "pnpm --filter @toktokhan-dev/template-next-page-router dev",
    "start:next:app": "pnpm --filter @toktokhan-dev/template-next-app-router dev",
    "start:tokript": "pnpm --filter @toktokhan-dev/cli dev",
    "start:toktoken": "pnpm --filter Toktoken build:watch",
    "tokript": "tokript2",
    "slack": "tsx ./scripts/slack.ts",
    "slack:test": "pnpm slack 23 '[{\"name\": \"@toktokhan-dev/tokit\", \"version\": \"1.2.0\"}, {\"name\": \"@toktokhan-dev/github\", \"version\": \"0.8.9\"}]'"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/generator": "^7.24.4",
    "@babel/types": "^7.24.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@microsoft/api-documenter": "^7.24.1",
    "@microsoft/api-extractor": "^7.43.0",
    "@microsoft/api-extractor-model": "^7.28.13",
    "@microsoft/tsdoc": "^0.14.2",
    "@microsoft/tsdoc-config": "^0.16.2",
    "@next/mdx": "^14.1.4",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@toktokhan-dev/cli": "workspace:*",
    "@toktokhan-dev/cli-plugin-commit": "workspace:*",
    "@toktokhan-dev/doc-plugin": "workspace:*",
    "@toktokhan-dev/eslint-config": "workspace:*",
    "@toktokhan-dev/node": "workspace:*",
    "@toktokhan-dev/prettier-config": "workspace:*",
    "@toktokhan-dev/rollup-config": "workspace:*",
    "@toktokhan-dev/ts-config": "workspace:*",
    "@types/babel__core": "^7.20.5",
    "@types/jest": "^28.1.8",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.17.2",
    "rollup-jest": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.7.1",
    "turbo": "2.0.4"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
